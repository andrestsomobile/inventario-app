<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".relocation.RelocationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_scan_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button_scan"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/barcode_product"
            app:layout_constraintTop_toTopOf="@+id/barcode_product" />

        <Button
            android:id="@+id/button_scan_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button_scan"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/barcode_origin"
            app:layout_constraintTop_toTopOf="@+id/barcode_origin" />

        <Button
            android:id="@+id/button_scan_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button_scan"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/barcode_destination"
            app:layout_constraintTop_toTopOf="@+id/barcode_destination" />

        <Button
            android:id="@+id/button_save_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button_modify"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_amount" />

        <TextView
            android:id="@+id/textViewRelocation"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/text_view_relocation"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:paddingEnd="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/text_view_user_name"
            android:textAlignment="textStart"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/syncButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/sync_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/username"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/barcode_product"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_marginTop="90dp"
            android:hint="@string/hint_product"
            app:layout_constraintStart_toStartOf="@+id/textViewRelocation"
            app:layout_constraintTop_toBottomOf="@+id/textViewRelocation"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/barcode_origin"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_marginTop="20dp"
            android:hint="@string/hint_origin"
            app:layout_constraintStart_toStartOf="@+id/barcode_product"
            app:layout_constraintTop_toBottomOf="@+id/barcode_product"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/barcode_destination"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_marginTop="90dp"
            android:hint="@string/hint_destination"
            app:layout_constraintStart_toStartOf="@+id/barcode_product"
            app:layout_constraintTop_toBottomOf="@+id/barcode_product"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/edit_text_amount"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:hint="@string/hint_amount"
            app:layout_constraintStart_toStartOf="@+id/barcode_destination"
            app:layout_constraintTop_toBottomOf="@+id/barcode_destination"
            app:layout_constraintVertical_chainStyle="packed" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.Material.ProgressBar.Large"
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>